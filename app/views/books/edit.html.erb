<h1>編集画面</h1>
<% if flash[:error] %>
  <%= flash[:error].count %>errors prohibited this book from being saved:
  <ul>
    <% flash[:error].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
<% end %>

<%= link_to 'show', book_path(@book.id) %>
